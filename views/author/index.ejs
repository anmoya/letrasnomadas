<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-12">

            <h1>Autores</h1>
            <table class="table">
                <thead>
                    <tr >
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Fecha Nac.</th>
                        <th>Pais</th>
                        <th>Ciudad</th>
                        <th>Bio</th>
                        <% if (currentUser) { %>
                        <th colspan='3' class='text-center'>Acciones</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% allAuthors.forEach((item) => { %>
                    <tr>
                        <td><%= item.authorName %></td>
                        <td><%= item.authorLastName %></td>
                        <td><%= moment(item.authorBornDate).format('Do MM, YYYY') %></td>
                        <td><%= item.authorCountry %></td>
                        <td><%= item.authorCity %></td>
                        <td><%= item.authorBio %></td>
                        <% if (currentUser) { %>
                        <td class='action-button'><a class='btn btn-info' href='/author/<%= item._id %>/edit'><i class="far fa-edit"></i></a></td>
                        <td class='action-button'><a class='btn btn-success' href='/author/<%= item._id %>'><i class="far fa-eye"></i></a></td>
                        <td class='action-button'>
                            <form  action="/author/<%= item._id %>?_method=DELETE" method="post">
                                <button class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                            </form>
                        </td>
                        <% } %>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>